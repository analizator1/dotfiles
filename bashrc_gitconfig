# It turns out --skip-alias is not present in 'which' on Ubuntu-based systems.
#if which --skip-alias git &>/dev/null; then
if command -v git >/dev/null; then
    git_config()
    {
        local name=$1
        local value=$2
        if [[ $(git config --global "$1") != $2 ]]; then
            echo "bashrc_gitconfig: setting '$1' = '$2'"
            git config --global "$1" "$2"
        fi
    } >&2

    git_config user.name "Krzysztof Sachanowicz"
    git_config core.excludesfile "~/.gitglobalexclude"
    git_config color.ui "auto"

    unset git_config
else
    echo ".bashrc_gitconfig: git is not installed"
fi
